<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Carousel</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/os1.css">
</head>
<body>
    <div class="container quiz-container">
        <div class="quiz-card">
            <h2 id="question" class="text-center">Loading Question...</h2>
            <div id="options-container" class="options mt-3"></div>
            <div class="navigation mt-4 text-center">
                <button id="prevBtn" class="btn btn-primary" onclick="prevQuestion()">Previous</button>
                <button id="nextBtn" class="btn btn-success" onclick="nextQuestion()">Next</button>
                
                <!-- Handle case where user is not logged in -->
                <!-- <button id="submitBtn" class="btn btn-success" 
                onclick="submitQuiz('<%= user.name %>')"
                    style="display: none;">
                    Submit
                </button>  -->
                <form method="post" action="/score/<%=user.name%>">
                    <input type="text" name="marks" class="final_ans">
                    <input type="text" name="answers" class="useranswers">
                    <input type="text" name="category" value="cn" style="display: none;" class="btn btn-danger">
                    <button id="submitBtn" onclick="calculateScore()"  class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Corrected JavaScript Path -->
    <script src="/css/cn.js"></script>
</body>
</html>
